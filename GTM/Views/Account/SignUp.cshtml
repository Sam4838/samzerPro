    <!-- All Required js -->
    <!-- ============================================================== -->
    <script src="~/Custom/visitor/assets/libs/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/Custom/visitor/assets/libs/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/Custom/visitor/assets/libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- ============================================================== -->
    <!-- This page plugin js -->
    <!-- ============================================================== -->
    <script>
        $('[data-toggle="tooltip "]').tooltip();
        $(".preloader ").fadeOut();

            $("#confirm-pwd").keyup(function () {

            var pwd = $("#user-pwd").val();
            var confPwd = $("#confirm-pwd").val();

            if (pwd != confPwd) {

                $("#pwdMess").html('<font color="Red">Passwords are not matching.. Try again!</font>');
                $("#pwdMess").css("color", "Red");
                return false;
            }
            else {
                $("#pwdMess").html('');
                return true;
            }
                //alert("working");
            })

        function checkUsers() {

            $("#spanmess").html("Checking...");
            $.post("@Url.Action("IsUserExists", "Account")",
                {
                    userdata: $("#user-email").val()
                },
                function (data) {

                    if (data == 0) {
                        $("#spanmess").html('Email Availavle!');

                        $("#spanmess").css("color", "Green");
                        return true;
                    }
                    else {
                        $("#spanmess").html('<font color:"Red">Email already in use! Try another..</font>');
                        $("#spanmess").css("color", "Red");
                        return false;
                    }
                });
        }
    </script>
 </body>
</html>


