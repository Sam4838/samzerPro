                    <div class="row text-center justify-content-md-center">
                        <div class="col-4"><a href="javascript:void(0)" class="link"><i class="far fa-money-bill-alt"></i> <font class="font-medium">@Model.balance</font></a></div>
                        <div class="col-4">
                            <a href="javascript:void(0)" class="link">
                                <i class="fas fa-eye"></i> <font class="font-medium">
                                    @if (@Model.IsAgreeTerms == true)
                                    {
                                        <b>1</b>
                                    }
                                    else
                                    {
                                        <b>0</b>

                                    }
