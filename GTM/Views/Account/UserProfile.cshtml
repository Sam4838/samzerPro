<div class="row">
    <!-- Column -->
    <div class="col-lg-4 col-xlg-3 col-md-5">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 col-md-offset">
                        <div id="online-txt-id">
                            <div class="user-online-indicator is-online " data-user-id="68544166">
