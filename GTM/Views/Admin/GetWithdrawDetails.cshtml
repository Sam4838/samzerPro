
@{
    ViewBag.Title = "GetWithdrawDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .toolbar {
        float: left;
    }
</style>

<head>
    <meta charset="utf-8">
    <link href="~/Custom/admin/assets/libs/data-tables/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Custom/admin/assets/libs/data-tables/datatables.net-bs4/css/responsive.dataTables.min.css" rel="stylesheet" />
</head>

<div class="wrapper">
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">

                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Withdraw Requests</a></li>
                            <li class="breadcrumb-item active"> List</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="card card-default color-palette-box">
                    <div class="card-body">
                        <table class="table table-striped table-bordered  table-hover " style=" margin-top:0px ">
                            <thead>
                                <tr>
                                    <th>
                                       Name
                                    </th>
                                    <th>
                                        Phone No.
                                    </th>
                                    <th>
                                        Request Amount
                                    </th>
                                    <th>
                                        Total Amount
                                    </th>
                                    <th>
                                        Request Date
                                    </th>
                                    <th>
                                        Pay Date
                                    </th>
                                    <th>
                                        is Paid
                                    </th>
                                    <th>
                                        Actions
                                    </th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.withdraw)
                                {
                                    <tr>
                                        <td>
                                            @item.RegistrationTbl.FName
                                        </td>
                                        <td>
                                            @item.phoneNo
                                        </td>
                                        <td>
                                            @item.Amount
                                        </td>
                                        <td>
                                            @item.TotalAmount
                                        </td>
                                        <td>
                                            @item.reqDate
                                        </td>
                                        <td>
                                            @item.payDate
                                        </td>
                                        <td>
                                            @item.isPaid
                                        </td>
                                        <td>
                                            @*@Html.ActionLink("Allow", "allowWithdraw", new { userId = item.userId }) |
                                                @Html.ActionLink("Delete", "delWithdraw", new { userId = item.userId })*@
                                            @Html.ActionLink("Allow", "allowWithdraw", new { userId = item.userId, id = item.id }) |
                                            @Html.ActionLink("Delete", "delWithdraw", new { userId = item.userId, id = item.id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<script src="~/Custom/visitor/assets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/Custom/admin/assets/libs/data-tables/datatables.net-bs4/js/dataTables.responsive.min.js"></script>
<script src="~/Custom/admin/assets/libs/data-tables/datatables.net/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">

        $(document).ready(function () {


            $('.table').DataTable({
                //dom: '<"toolbar">Bfrtip',
                "searching": true,
                "pageLength": 50,
                "lengthChange": false,
                "scrollCollapse": true,

            });

        })
        function getUserDetails(userId) {

            window.location = '@Url.Action("GetUsersDetails", "Admin")/' + userId;
    }

</script>
