
@{
    ViewBag.Title = "GetWithdrawDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper">
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">

                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Withdraw Requests</a></li>
                            <li class="breadcrumb-item active"> List</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="card card-default color-palette-box">
                    <div class="card-body">
                        <table class="table table-striped table-bordered  table-hover " style=" margin-top:0px ">
                            <thead>
                                <tr>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Phone No.
                                    </th>
                                    <th>
                                        Request Amount
                                    </th>
                                    <th>
                                        Total Amount
                                    </th>
                                    <th>
                                        Request Date
                                    </th>
                                    <th>
                                        Pay Date
                                    </th>
                                    <th>
                                        is Paid
                                    </th>
                                    <th>
                                        Actions
                                    </th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.withdraw)
                                {
                                    <tr>
                                        <td>
                                            @item.RegistrationTbl.UserName
                                        </td>
                                        <td>
                                            @item.phoneNo
                                        </td>
                                        <td>
                                            @item.Amount
                                        </td>
                                        <td>
                                            @item.TotalAmount
                                        </td>
                                        <td>
                                            @item.reqDate
                                        </td>
                                        <td>
                                            @item.payDate
                                        </td>
                                        <td>
                                            @item.isPaid
                                        </td>
                                        <td>
                                            @*@Html.ActionLink("Allow", "allowWithdraw", new { userId = item.userId }) |
                                            @Html.ActionLink("Delete", "delWithdraw", new { userId = item.userId })*@
                                            @Html.ActionLink("Allow", "allowWithdraw", new { userId = item.userId, id = item.id }) |
                                            @Html.ActionLink("Delete", "delWithdraw", new { userId = item.userId, id = item.id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" type="text/css" href="http://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="datatables/DataTables-1.10.16/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" type="text/css" href="datatables/Buttons-1.4.2/css/buttons.bootstrap4.min.css" />
    <style>
        .toolbar {
            float: left;
        }
    </style>

}

