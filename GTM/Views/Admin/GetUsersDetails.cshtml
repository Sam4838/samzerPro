 @model GTM.Models.RegistrationTbl

@{
    //ViewBag.Title = "GetUsersDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="wrapper">

    <div class="content-wrapper">

        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">

                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">User</a></li>
                            <li class="breadcrumb-item active">Detail</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>


        <section class="content">
            <div class="container-fluid">
                <!-- COLOR PALETTE -->
                <div class="card card-default color-palette-box">
                    @*<div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-tag"></i>
                                Color Palette
                            </h3>
                        </div>*@
                    @*<form action="DeleteUser" method="post">*@

                        <div class="card-body">
@using (Html.BeginForm("DeleteUser", "Admin", new { id = Model.UserId }))
{
                            <div class="row">

                                <div class="col-md-4 center-block text-center">
                                    <img src="@Url.Content(Model.ProfileImgPath)" style="height:225px; width:180px; border-radius:50%" />
                                    <br />
                                    <br />
                                    
                                    <input type="submit" class="btn btn-danger" value="Remove" onclick="return confirm('Are you sure you want to delete @Model.UserName ?')">

                                </div>
                                <div class="col-md-4">
                                    <h3>Personal Details</h3>
                                    <hr />
                                    <dl class="dl-horizontal">
                                        <dt>
                                            @*@Html.DisplayNameFor(model => model.FName)*@
                                            Name
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.FName)
                                        </dd>
                                        <dt>
                                            @*@Html.DisplayNameFor(model => model.UserName)*@
                                            Email
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.UserName)
                                        </dd>


                                        @*@Html.DisplayFor(model => model.ProfileImgPath)*@



                                        <dt>
                                            @Html.DisplayNameFor(model => model.Gender)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Gender)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Perspective)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Perspective)
                                        </dd>

                                        @*<dt>
                                            @Html.DisplayNameFor(model => model.Password)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Password)
                                        </dd>*@


                                    </dl>

                                </div>

                                <div class="col-md-4 text-center">
                                    <h3>Current Package</h3>

                                    <hr />
                                    @if (ViewBag.CurrentPkg == "N")
                                    {
                                        <p>Did't subscribe to any package yet!</p>
                                    }
                                    else
                                    {
                                        <h2 style="font-size:xx-large;text-decoration-line:underline; font-family:sans-serif; color:dodgerblue; ">@ViewBag.CurrentPkg</h2>

                                    }

                                </div>
                            </div>
}
                        </div>
                        <!-- /.card-body -->
                    @*</form>*@
                </div>
            </div>


            <!-- START ALERTS AND CALLOUTS -->
            <h5 class="mt-4 mb-2">
                <a href="/Admin/GetUsersList">Back to list</a>
            </h5>
            <br />
        </section>
    </div>
</div>


