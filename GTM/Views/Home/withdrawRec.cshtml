
@{
    ViewBag.Title = "withdrawRec";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">

    <div class="content-wrapper">

        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">

                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/Home/withdrawRec">WithDraw</a></li>
                            <li class="breadcrumb-item active">Cash</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>


        <section class="content">
            <div class="container-fluid">
                <!-- COLOR PALETTE -->
                <div class="card card-default color-palette-box">

                    <div class="card-body">

                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-4 text-center">
                                <form action="/Home/withdrawRec" method="post">
                                    <label>Enter amount to withdraw:</label>
                                    
                                    <div class="form-group">
                                        @*<label>Enter amount to withdraw:</label>*@
                                        <input class="form-control" type="number" min="500" max="5000" name="Amount" step="any" required />
                                    </div>
                                    <label>Enter Phone No: (JazzCash/EasyPaisa)</label>
                                    <div class="form-group">
                                        <input class="form-control" type="tel" name="phoneNo" pattern="[0-9]{11}" placeholder="03XX-XXXXXXX" required />
                                    </div>
                                    <input class="btn btn-primary"  type="submit" value="Submit" />
                                </form>
                            </div>
                            <div class="col-md-4"></div>
                           

                        </div>
                    </div>
                    <!-- /.card-body -->
                    @*</form>*@
                </div>
            </div>


            <!-- START ALERTS AND CALLOUTS -->
            <h5 class="mt-4 mb-2">
                <a href="/Home/Index">Back to home</a>
            </h5>
            <br />
        </section>
    </div>
</div>

