<!-- jQuery -->
<script src="~/Custom/visitor/assets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/Custom/visitor/assets/libs/toastr/toastr.min.js"></script>

<script type="text/javascript">

    $("#withdrawalForm").submit(function (e) {
        e.preventDefault();
        var amount = $("#amount-id").val();
        var phone = $("#phone-id").val();
        var obj = {
            Amount: amount,
            Phone: phone
        }

        $.ajax({
            url: "/Home/withdrawRec",
            method: "post",
            data: obj
        })
            .done(function () {
                $(this).find("input").val("");
                $("#withdrawalForm").trigger("reset");

                toastr.success("Request sent!");

            })
            .fail(function () {

                toastr.error("Sending fail!")
            });

        return false;
    });
    
</script>


